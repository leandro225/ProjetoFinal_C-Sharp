                <GridView >
                    <GridViewColumn Header="Tamanho" Width="100" DisplayMemberBinding="{Binding Path= Tamanho}" />
                    <GridViewColumn Header="Sabor" Width="350" DisplayMemberBinding="{Binding Path= Sabor}" />
                    <GridViewColumn Header="Adicional" Width="250" DisplayMemberBinding="{Binding Path= Adicional}" />
                    <GridViewColumn Header="Valor" DisplayMemberBinding="{Binding Path= Valor}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Total:" HorizontalAlignment="Left" Margin="700,465,0,0" VerticalAlignment="Top" Foreground="#DDFFFFFF" FontFamily="Century Gothic" FontWeight="Bold" Width="45"/>
        <TextBlock x:Name="txtTelefone" HorizontalAlignment="Left" Margin="115,122,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="156"/>
        <TextBlock x:Name="txtNome" HorizontalAlignment="Left" Margin="115,96,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="156"/>
        <TextBlock x:Name="txtEndereco" HorizontalAlignment="Left" Margin="115,146,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="156"/>
        <TextBlock x:Name="txtNumero" HorizontalAlignment="Left" Margin="115,170,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="156"/>
        <TextBlock x:Name="txtBairro" HorizontalAlignment="Left" Margin="115,196,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="156"/>
        <TextBlock x:Name="txtTotal" HorizontalAlignment="Left" Margin="750,471,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="63"/>
        <TextBlock x:Name="txtCodigo" HorizontalAlignment="Left" Margin="147,272,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
